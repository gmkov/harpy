        sys.exit(1)
    command = ['snakemake', '--cores', f'{threads}', '--directory', '.', '--snakefile', "rules/variantcall.smk", '--configfile', f"{config}"]
    if resume:
        command.append('--rerun-incomplete')
    command.append('--config')
    command.append(f"seq_directory={dir}")
